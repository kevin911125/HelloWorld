<Window x:Class="HelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorld"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="開始" Content="開始" HorizontalAlignment="Left" Margin="428,154,0,0" VerticalAlignment="Top" Height="90" Width="157" Foreground="#FFC13737" Background="#FF204994"/>
        <TextBox x:Name="txtShow" HorizontalAlignment="Left" Margin="164,161,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="172" Height="94" RenderTransformOrigin="0.5,0.5" BorderBrush="#FFB3ADAB" Foreground="#FFA62B2B">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.604"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>

    </Grid>
</Window>
